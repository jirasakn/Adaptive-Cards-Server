# Server configuration
PORT=3000

# Body parser limit for JSON payloads (support base64 images)
BODY_PARSER_LIMIT=50mb

# CORS configuration
# ใช้ '*' เพื่ออนุญาตทุก origin หรือระบุแยกด้วยเครื่องหมาย ',' เช่น 'http://localhost:8080,https://example.com'
CORS_ORIGIN=*

# Node environment (development, production)
NODE_ENV=production 